  <body>
    <%= render "shared/flashes" %>
    <%= yield %>
    <% unless ["devise/registration", "devise/session", "devise/password", "pages"].include?(params[:controller]) || devise_controller? %>
      <%= render "shared/navbar" %>
    <% end %>
  </body>
</html>
