<div class="image-event-show"><%= cl_image_tag( @event.photo.key, alt: "NA", class: "card-img-top img-show") %></div>
<div class="container show-event">

  <%= link_to events_path, class: "btn-back-all-events" do %>
    <i class="fa-solid fa-circle-chevron-left"></i>
  <% end %>

  <%= button_to event_bookings_path(@event), data: { turbo_method: :post }, class: "join-event-button" do %>
    <i class="fa-solid fa-user-plus"></i>
  <% end %>

  <div class="icon-event-categories">
    <i class="fa-solid fa-campground category"></i>
  </div>

  <%= cl_image_tag( @event.user.photo.key, alt: "NA", class: "card-trip-user avatar-show-event") %>

  <div class="show-infos">
    <h1 class="event-title spacy"><%= @event.name %></h1>
    <div class="location-wrapper d-flex align-items-center spacy">
      <i class="fa-solid fa-location-pin icon-info where-show"></i>
      <div class="location size"><%= @event.address %></div>
    </div>
    <div class="date-wrapper d-flex align-items-center">
      <i class="fa-regular fa-calendar icon-info when-show spacy"></i>
      <div class="display-date size"><%= @event.date %></div>
    </div>
    <div class="date-wrapper d-flex align-items-center">
      <i class="fa-solid fa-user-group icon-info who-show spacy"></i>
      <div class="count-members size"><%= @event.bookings.count %> members going</div>
    </div>
    <div class="description">
      <p class="infos-description">Description</p>
        <p class="text-description"> "<%= @event.description %>"</p>
    </div>
  </div>
</div>

