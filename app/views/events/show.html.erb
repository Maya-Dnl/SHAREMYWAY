<div class="image-event-show">
  <%= cl_image_tag(@event.photo.key, alt: "NA", class: "card-img-top img-show") %>
  <div class="image-event-gradiant"></div>
</div>
<div class="container show-event">

  <%= link_to events_path, class: "btn-back-all-events" do %>
    <i class="fa-solid fa-circle-chevron-left"></i>
  <% end %>

  <% if @event.user == current_user %>
    <div class="btn-delete-edit d-flex">
      <%= button_to event_path(@event), method: :delete, class: "delete-event-button" do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
      <%= link_to edit_event_path(@event.id), class: "edit-event-button" do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
    </div>

  <% else %>

    <%= button_to event_bookings_path(@event), data: { turbo_method: :post }, class: "join-event-button" do %>
      <i class="fa-solid fa-user-plus"></i>
    <% end %>

  <% end %>


  <div class="category">
    <% if @event.category == "Hiking and Trekking" %>
      <i class="fa-solid fa-person-hiking"></i>
    <% elsif @event.category == "Backpacking and Camping" %>
      <i class="fa-solid fa-campground"></i>
    <% elsif @event.category == "Road Trips and Drives" %>
      <i class="fa-solid fa-car"></i>
    <% elsif @event.category == "Wildlife and Safari" %>
      <i class="fa-solid fa-hippo"></i>
    <% elsif @event.category == "Language Learning" %>
      <i class="fa-solid fa-language"></i>
    <% elsif @event.category == "Photography Workshops" %>
      <i class="fa-solid fa-camera"></i>
    <% elsif @event.category == "Cooking Classes" %>
      <i class="fa-solid fa-cookie-bite"></i>
    <% elsif @event.category == "Coding and Tech Workshops" %>
      <i class="fa-solid fa-book-open"></i>
    <% elsif @event.category == "Yoga and Meditation" %>
      <i class="fa-solid fa-spa"></i>
    <% elsif @event.category == "Group Fitness Classes" %>
      <i class="fa-solid fa-people-group"></i>
    <% elsif @event.category == "Outdoor Sports" %>
      <i class="fa-solid fa-cloud-sun"></i>
    <% else @event.category == "Personal Training" %>
      <i class="fa-solid fa-dumbbell"></i>
    <% end %>
  </div>

  <%= cl_image_tag( @event.user.photo.key, alt: "NA", class: "card-trip-user avatar-show-event") %>

  <div class="show-infos">
    <h1 class="event-title spacy"><%= @event.name %></h1>
      <div class="input-group input-wrapper-new">
        <span class="input-group-addon-new"><i class="fa fa-map-marker where-show-new"></i></span>
        <div class="location size"><%= @event.address %></div>
      </div>

      <div class="input-group input-wrapper-new">
        <span class="input-group-addon-new"><i class="fa-regular fa-calendar when-show-new"></i></span>
        <div class="display-date size"><%= @event.date %></div>
      </div>

      <div class="input-group input-wrapper-new">
        <span class="input-group-addon-new"><i class="fa-solid fa-user icon-info who-show-new spacy"></i></span>
        <% if (@event.bookings.count) == 0 %>
          <div class="count-members size">No members</div>
        <% elsif (@event.bookings.count) == 1 %>
          <div class="count-members size">One member</div>
        <% else (@event.bookings.count) > 1 %>
          <div class="count-members size"><%= @event.bookings.count %>members</div>
        <% end %>
      </div>

    <div class="description">
      <p class="infos-description"></p>
        <p class="text-description"> "<%= @event.description %>"</p>
    </div>
  </div>
</div>
